# Environment variables for Flask Credit Card API

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///credit_card_system.db

# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/credit_card_db

# API Configuration
API_VERSION=v1
DEBUG=True

# Pagination defaults
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Reward system configuration
REWARD_POINTS_PER_DOLLAR=1
POINTS_TO_DOLLAR_RATE=0.01

# Card type reward multipliers
PLATINUM_MULTIPLIER=3.0
GOLD_MULTIPLIER=2.0
SILVER_MULTIPLIER=1.5
BASIC_MULTIPLIER=1.0

# Category bonus multipliers
DINING_BONUS=1.5
TRAVEL_BONUS=1.5

# Default reward expiry (in days)
DEFAULT_REWARD_EXPIRY_DAYS=730